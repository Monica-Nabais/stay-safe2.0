<% @my_hazard_notifications.each do |hazard_notification| %>
  <div class="card-notifications">
    <div class="card-notification-sidebar <%= hazard_notification.read == true ? "read-sidebar" : "in-danger-sidebar-unread" %>"></div>
    <div class="card-notifications-content" data-toggle="modal" data-target="#myModal">
      <%#= simple_form_for(hazard_notification, url: hazard_notification_read_path(hazard_notification), method: :patch) do |f| %>
      <%#= f.hidden_field :read, :value => true %>
      <%#= button_tag type: :submit, class: "read-notification-button" do %>
      <div class="user-card-info">
          <p>You are in a danger zone! Click to let your friends know you're save</p>
          <%#= link_to "Mark yourself safe", mark_as_safe_path, method: :post, class: "btn btn-primary" %>
      </div>
      <%# end %>
      <%# end %>
    </div>
  </div>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content" >


      <div class="modal-body">
        <div class="close-modal">

        <button type="button" class="close close-modal-button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <div class="modal-friends-card-hazard-warnings">

            <div class="modal-friends-card-hazard-warnings-container">
                <p><%= image_tag 'modal_fire.svg' %> <%= hazard_notification.hazard.kind %></p>
            </div>
            <div class="modal-friends-card-hazard-warnings-container">
                <p><%= image_tag 'modal_location.svg' %> Location</p>
            </div>
            <div class="modal-friends-card-hazard-warnings-container">
              <p><%= image_tag 'modal_loading.svg' %> Status</p>
            </div>

        </div>
        <%= link_to "Mark yourself safe", mark_as_safe_path, method: :post, class: "mark-yourself-safe" %>

      </div>

    </div>
  </div>
</div>
<% end %>
