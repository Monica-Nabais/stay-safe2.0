<% @my_hazard_notifications.each do |hazard_notification| %>
  <div class="card-notifications">
    <div class="card-notification-sidebar <%= hazard_notification.read == true ? "read-sidebar" : "in-danger-sidebar-unread" %>"></div>
    <div class="card-notifications-content">
      <div class="user-card-info">
          <p>You are in a danger zone! Let your friends know you're save</p>
      </div>

      <div class="btn user-card-button modal-button">
        <%= link_to mark_as_safe_path, method: :post do %>
          <p class="text-center">Add</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
