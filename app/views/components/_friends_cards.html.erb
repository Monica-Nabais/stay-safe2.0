
    <% @friends.each do |friend| %>

    <div class="col-xs-6 col-md-6">

      <div class="friends-card">

        <div class="friends-card-front">

          <div class="friends-card-front-main-info">

            <div class="friends-card-user-avatar">
            </div>

            <div class="friends-card-user-name">
              <p class="text-center"><%= friend.first_name %> <%= friend.last_name %></p>
            </div>
          </div>

          <div class="friends-card-front-arrow">
            <%= image_tag 'cards_front_arrow.svg' %>
          </div>

          <div class="friends-card-button-content">
            <div class="friends-card-corner-button"></div>

            <div class="friends-card-hazard-warnings hidden">
              <p><%= image_tag 'cards_fire.svg' %> Kind</p>
              <p><%= image_tag 'cards_location' %> Location</p>
              <p><%= image_tag 'cards_loading' %> Status</p>
            </div>
          </div>

        </div>

        <div class="friends-card-back hide">
          <div class="friends-card-back-arrow">
            <%= image_tag 'cards_back_arrow.svg' %>
          </div>

          <div class="friends-card-actions">
            <p><%= image_tag 'cards_edit.svg' %> Edit</p>
            <p><%= image_tag 'cards_delete.svg' %> Unfriend</p>
          </div>
        </div>
      </div>

    </div>
    <% end %>

